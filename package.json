{
  "name": "cvdcare-api",
  "version": "0.0.4",
  "description": "A basic nest-js api",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "build:prod": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node .enoviah/service/@enoviah/cvdcare-api/main.js\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "setup": "npm i",
    "e2e": "echo [EnoviahCI] E2E Command not configured."
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "@enoviah/nest-core": "0.0.27",
    "@godaddy/terminus": "^4.3.1",
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/swagger": "^3.1.0",
    "@nestjs/terminus": "^6.5.5",
    "@nestjs/typeorm": "^6.3.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "latest",
    "helmet": "^3.21.2",
    "jsonschema": "^1.2.5",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "swagger-ui-express": "^4.0.2",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.0",
    "@types/cors": "^2.8.6",
    "@types/express": "4.16.1",
    "@types/helmet": "0.0.45",
    "@types/jest": "24.0.11",
    "@types/node": "11.13.4",
    "@types/supertest": "2.0.7",
    "husky": "^4.2.0",
    "jest": "24.7.1",
    "prettier": "1.17.0",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsc-watch": "2.2.1",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "3.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "enoviah": {
    "configuration": {
      "lifecycle": {
        "macos": {
          "onInit": {
            "commands": []
          },
          "onArtifact": {
            "commands": []
          },
          "onCodeQuality": {
            "commands": []
          }
        },
        "linux": {
          "onInit": {
            "commands": []
          },
          "onArtifact": {
            "commands": []
          },
          "onCodeQuality": {
            "commands": []
          }
        }
      },
      "rootPath": ".",
      "type": "service",
      "name": "cvdcare-api",
      "group": "enoviah"
    },
    "service": {
      "artifact": {
        "linux": {
          "coverage": false,
          "e2e": false,
          "lint": false,
          "mandatory": [
            {
              "path": "Dockerfile",
              "name": "Dockerfile"
            },
            {
              "path": "package.json",
              "name": "package.json"
            },
            {
              "path": "docker",
              "name": "docker"
            },
            {
              "path": "node_modules",
              "name": "node_modules"
            }
          ],
          "test": false
        },
        "macos": {
          "coverage": false,
          "e2e": false,
          "lint": false,
          "mandatory": [],
          "test": false
        }
      },
      "deployment": {
        "production": {
          "network": "traefik",
          "labels": {
            "traefik.port": "3000",
            "traefik.frontend.rule": "Host:mit-api.enoviah.fr",
            "traefik.frontend.entryPoints": "http,https",
            "traefik.backend": "cvdcare-api"
          },
          "env": [
            "PORT",
            "MYSQL_ADDRESS",
            "MYSQL_PASSWORD",
            "MYSQL_PORT",
            "MYSQL_USER",
            "MYSQL_DATABASE",
            "NODE_ENV"
          ]
        },
        "staging": {
          "network": "traefik",
          "labels": {
            "traefik.port": "3000",
            "traefik.frontend.rule": "Host:mit-api.enoviah.staging",
            "traefik.frontend.entryPoints": "http,https",
            "traefik.backend": "cvdcare-api"
          },
          "env": [
            "PORT",
            "MYSQL_ADDRESS",
            "MYSQL_PASSWORD",
            "MYSQL_PORT",
            "MYSQL_USER",
            "MYSQL_DATABASE",
            "NODE_ENV"
          ]
        }
      }
    }
  }
}
